<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentContactUs"
    android:background="#fff"
    android:paddingEnd="@dimen/activity_vertical_margin"
    android:paddingStart="@dimen/activity_vertical_margin">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="0.1"
        android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="تنظیم ساعت دلخواه"
            android:textColor="#6f0b0d"
            android:textSize="24dip"
            android:layout_gravity="center|right"
            android:gravity="right"
            android:textStyle="bold"
            android:id="@+id/txt_wish_hour" />

    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="0.8"
        android:background="@drawable/border"
        android:gravity="center"
        android:foregroundGravity="left">

        <TimePicker
            android:id="@+id/timePicker1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/set_button"

            android:layout_gravity="center"
            android:timePickerMode="spinner"
            android:foregroundGravity="right" />

    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="0.1"
        android:gravity="center"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <Button
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:text="تایید"
            android:id="@+id/setHour"
            android:background="#6f0b0d"
            android:textColor="#fff"
            android:textSize="24dip"
            android:layout_weight="0.5"
            android:layout_marginLeft="2dip" />

        <Button
            android:layout_width="0dip"
            android:layout_height="wrap_content"

            android:text="انصراف"
            android:id="@+id/cancelHour"
            android:background="#6f0b0d"
            android:textColor="#fff"
            android:textSize="24dip"
            android:layout_weight="0.5"
            android:layout_marginRight="2dip" />

    </LinearLayout>

    <!-- TODO: Update blank fragment layout -->



</LinearLayout>

